#include <iostream>
#include <cmath>

class Point2d {
 
  double m_x{};
  double m_y{};
 
  public:
  Point2d(double one = 0.0, double two = 0.0) {
      m_x = one;
      m_y = two;
  }
 
  void print() {
    std::cout << "Point2d(" << m_x << "," << m_y << ")\n";
  }
 
  friend double distanceFrom(Point2d& point1D, Point2d& point2D);
 
 
};

double distanceFrom(Point2d& point1D, Point2d& point2D) {
      double x_dist = point1D.m_x - point2D.m_x;
      double y_dist = point1D.m_y - point2D.m_y;
      double total = sqrt(pow(x_dist, 2) + pow(y_dist,2));
      
      return total;
  }


int main()
{
    Point2d first{};
    Point2d second{ 3.0, 4.0 };
    first.print();
    second.print();
    std::cout << "Distance between two points: " << distanceFrom(first, second) << '\n';

    return 0;
}
